    soc = [{
        icon:"facebook-logo"
    },{
        icon:"vk"
    },{
        icon:"instagram"
    },{
        icon:"twitter"
    }],
    nav = [{
        title:"Помощь",
        links:[{
            href:"shipping-and-payment.html",
            title:"Доставка / Оплата"
        },{
            href:"typical.html",
            title:"Оферта"
        },{
            href:"typical.html",
